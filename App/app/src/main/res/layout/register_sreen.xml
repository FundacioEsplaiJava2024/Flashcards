<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".service.login.RegisterActivity"
    android:background="@drawable/gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="top"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/exo_2_semibold"
                android:text="USUARIO"
                android:textColor="#F9F9F9"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/noborderedittext"
                android:fontFamily="@font/exo_2"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textColor="#F9F9F9"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/exo_2_semibold"
                android:text="E-MAIL"
                android:textColor="#F9F9F9"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/noborderedittext"
                android:fontFamily="@font/exo_2"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:textAlignment="textStart"
                android:textColor="#F9F9F9"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvContra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/exo_2_semibold"
                android:text="CONTRASEÑA"
                android:textColor="#F9F9F9"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etContra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/noborderedittext"
                android:fontFamily="@font/exo_2"
                android:inputType="textPassword"
                android:lineBreakStyle="normal"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textColor="#F9F9F9"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRPcontra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/exo_2_semibold"
                android:text="REPETIR CONTRASEÑA"
                android:textColor="#F9F9F9"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etRPcontra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/noborderedittext"
                android:fontFamily="@font/exo_2"
                android:inputType="textPassword"
                android:lineBreakStyle="normal"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textColor="#F9F9F9"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/exo_2_semibold"
                android:text="CONTRASEÑA NO COMPATIBLE"
                android:textAlignment="center"
                android:textColor="#DC4759"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btCreate"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/borderedittext"
                android:fontFamily="@font/exo_2_semibold"
                android:text="CREAR CUENTA"
                android:textColor="#F9F9F9"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvForgotPwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:fontFamily="@font/exo_2"
                android:text="¿CONTRASEÑA NO COMPATIBLE?"
                android:textAlignment="center"
                android:textColor="#808080"
                android:textSize="16sp"
                android:visibility="invisible" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btLogin"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/borderedittext"
                android:fontFamily="@font/exo_2_semibold"
                android:text="YA TENGO UNA CUENTA"
                android:textColor="#F9F9F9"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
