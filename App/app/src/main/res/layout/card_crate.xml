<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    tools:context=".service.cardlogic.CreateCardActivity">

    <TextView
        android:id="@+id/tvFront"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Front"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/exo_2_semibold"
        android:textColor="#1b2631"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etFront"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter front text"
        android:inputType="text"
        android:padding="8dp"
        android:background="@drawable/noborderedittext"
        android:textColor="#1b2631"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvFront"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvBackside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Backside"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/exo_2_semibold"
        android:textColor="#1b2631"
        app:layout_constraintTop_toBottomOf="@id/etFront"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etBackside"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter backside text"
        android:inputType="text"
        android:padding="8dp"
        android:background="@drawable/noborderedittext"
        android:textColor="#1b2631"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvBackside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvCollectionId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Collection ID"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/exo_2_semibold"
        android:textColor="#1b2631"
        app:layout_constraintTop_toBottomOf="@id/etBackside"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etCollectionId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter collection ID"
        android:inputType="number"
        android:padding="8dp"
        android:background="@drawable/noborderedittext"
        android:textColor="#1b2631"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvCollectionId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btCreateCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Create Card"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="12dp"
        android:minWidth="200dp"
        app:layout_constraintTop_toBottomOf="@id/etCollectionId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/borderedittext"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btCreateColecction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Create Colection"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="12dp"
        android:minWidth="200dp"
        app:layout_constraintTop_toBottomOf="@id/etCollectionId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/borderedittext"/>

</androidx.constraintlayout.widget.ConstraintLayout>
