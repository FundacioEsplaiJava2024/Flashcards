<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".service.login.LoginActivity"
    android:background="@drawable/gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="top"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/ivIconApp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:src="@drawable/ic_launcher_background" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/exo_2_semibold"
                android:text = "EMAIL"

                android:textColor="#F9F9F9"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/noborderedittext"
                android:fontFamily="@font/exo_2"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textColor="#F9F9F9"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/exo_2_semibold"
                android:text="CONTRASEÑA"
                android:textColor="#F9F9F9"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/noborderedittext"
                android:fontFamily="@font/exo_2"
                android:inputType="textPassword"
                android:lineBreakStyle="normal"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textColor="#F9F9F9"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/exo_2_semibold"
                android:text="CREDENCIALES INCORRECTAS"
                android:textAlignment="center"
                android:textColor="#DC4759"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btLogin"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/borderedittext"
                android:fontFamily="@font/exo_2_semibold"
                android:text="INICIAR SESIÓN"
                android:textColor="#F9F9F9"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvForgotPwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:fontFamily="@font/exo_2"
                android:text="¿Olvidaste la contraseña?"
                android:textAlignment="center"
                android:textColor="#808080"
                android:textSize="16sp"
                android:visibility="invisible" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btRegister"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/borderedittext"
                android:fontFamily="@font/exo_2_semibold"
                android:text="CREAR CUENTA"
                android:textColor="#F9F9F9"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
